{% block body %}
    <h1>Newsletters</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ newsletter.sujet }}</td>
