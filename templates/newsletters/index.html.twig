{% extends 'base.html.twig' %}

{% block title %}Newsletters index{% endblock %}

{% block body %}
    <h1>Newsletters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>DateEnvoi</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.sujet }}</td>
                <td>{{ newsletter.contenu }}</td>
                <td>{{ newsletter.dateEnvoi ? newsletter.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_newsletters_show', {'id': newsletter.id}) }}">show</a>
                    <a href="{{ path('app_newsletters_edit', {'id': newsletter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_newsletters_new') }}">Create new</a>
{% endblock %}
