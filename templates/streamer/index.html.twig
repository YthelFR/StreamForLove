{% extends 'base.html.twig' %}

{% block title %}Hello StreamerController!{% endblock %}

{% block body %}
<style>
    #newsletterSection {
        display: none;
    }
</style>
<div class="gradientBg py-12">
    <h2 class="text-3xl font-bold text-center mb-10 text-white">Les streamers de l'évènement</h2>

    {% if activeStreamers is not empty %}
        <ul class="flex flex-wrap gap-4">
            {% for streamer in activeStreamers %}
                <li>
                    <a href="{{ path('app_streamers_show', { 'pseudo': streamer.pseudo }) }}">
                        <img src="{{ streamer.avatarUrl }}" alt="{{ streamer.pseudo }}'s avatar">
                        <p>{{ streamer.pseudo }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-2xl font-bold text-center mb-10 text-white">Aucun streamer actif trouvé.</p>
    {% endif %}

    <h2 class="text-3xl font-bold text-center mb-10 text-white">Streamers anciens évènements</h2>

    {% if inactiveStreamers is not empty %}
        <ul class="flex flex-wrap gap-4">
            {% for streamer in inactiveStreamers %}
                <li>
                    <a href="{{ path('app_streamers_show', { 'pseudo': streamer.pseudo }) }}">
                        <img src="{{ streamer.avatarUrl }}" alt="{{ streamer.pseudo }}'s avatar">
                        <p>{{ streamer.pseudo }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-2xl font-bold text-center mb-10 text-white">Aucun streamer absent trouvé.</p>
    {% endif %}

    <h2 class="text-3xl font-bold text-center mb-10 text-white">Les streamers hors-évènement</h2>

    {% if outsiders is not empty %}
        <ul class="flex flex-wrap gap-4">
            {% for outsider in outsiders %}
                <li>
                    <a href="{{ path('app_outsiders_show', { 'pseudo': outsider.pseudo }) }}">
                        <img src="{{ outsider.avatarUrl }}" alt="{{ outsider.pseudo }}'s avatar">
                        <p>{{ outsider.pseudo }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No outsiders found.</p>
    {% endif %}
</div>
{% endblock %}
