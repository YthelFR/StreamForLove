{% extends 'base.html.twig' %}

{% block title %}Mes Présentations{% endblock %}

{% block body %}
    <h1>Mes Présentations</h1>

    <a href="{{ path('streamer_presentations_new') }}" class="btn btn-success">Créer une nouvelle présentation</a>

    <div class="presentations">
        {% for presentation in presentations %}
            <div class="presentation">
                <h2>{{ presentation.title }}</h2>
                <p>{{ presentation.content }}</p>
                <a href="{{ path('streamer_presentations_edit', { id: presentation.id }) }}" class="btn btn-primary">Modifier</a>
                {{ include('presentations/_delete_form.html.twig', {'presentation': presentation, 'route': 'streamer_presentations_delete'}) }}
            </div>
        {% else %}
            <p>Vous n'avez pas encore créé de présentation.</p>
        {% endfor %}
    </div>
{% endblock %}
