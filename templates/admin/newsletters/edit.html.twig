{% extends 'admin_base.html.twig' %}

{% block title %}Modifier une Newsletter
{% endblock %}

{% block body %}
<div class="mx-auto w-10/12 max-w-2xl p-4 border border-gray-300 shadow-lg mt-8">
	<h1 class="text-center font-bold text-2xl mb-5 text-gray-800">Modifier une Newsletter</h1>

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="p-3 mb-3 text-white {{ label == 'success' ? 'bg-green-500' : 'bg-red-500' }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	{{ form_start(form) }}
	<div class="mb-4">
		{{ form_label(form.sujet, 'Sujet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
		{{ form_widget(form.sujet, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
	</div>

	<div class="mb-4">
		{{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
		{{ form_widget(form.contenu, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
	</div>

	<div class="mb-4">
		{{ form_label(form.dateEnvoi, 'Date d\'envoi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.dateEnvoi, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
        </div>

        <div class="flex justify-end mt-6">
            <a href="{{ path('admin_newsletters_index') }}" class="border border-gray-300 p-2 px-4 font-semibold text-gray-500 mr-2">Retour à la liste</a>
            <button type="submit" class="bg-indigo-500 text-white p-2 px-4 font-semibold border border-indigo-500">Mettre à jour</button>
        </div>

    {{ form_end(form) }}
		</div>

		<div class="mx-auto w-10/12 max-w-2xl p-4 border border-gray-300 shadow-lg mt-8">
			{{ include('admin/newsletters/_delete_form.html.twig') }}
		</div>
	{% endblock %}
