{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Présentations{% endblock %}

{% block body %}
<div class="mx-auto max-w-screen-lg px-4 py-8 sm:px-8">
    <h1 class="text-2xl font-semibold text-gray-700">Liste des Présentations</h1>

    {% if presentations is empty %}
        <p class="mt-4 text-gray-500">Aucune présentation trouvée.</p>
    {% else %}
        <div class="overflow-y-hidden rounded-lg border mt-6">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-blue-600 text-left text-xs font-semibold uppercase tracking-widest text-white">
                            <th class="px-5 py-3">Pseudo du Créateur</th>
                            <th class="px-5 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-500">
                        {% for presentation in presentations %}
                        <tr class="bg-white hover:bg-gray-100">
                            <!-- Pseudo du créateur -->
                            <td class="border-b border-gray-200 px-5 py-5 text-sm">
                                <p class="whitespace-no-wrap">{{ presentation.streamersPresentation.pseudo }}</p>
                            </td>

                            <!-- Actions : Éditer (bouton vert) -->
                            <td class="border-b border-gray-200 px-5 py-5 text-sm">
                                <div class="flex space-x-4">
                                    <!-- Bouton vert pour éditer -->
                                    <a href="{{ path('admin_presentations_edit', { id: presentation.id }) }}"
                                       class="inline-block rounded bg-green-500 px-4 py-2 text-sm font-semibold text-white hover:bg-green-600">
                                        Éditer
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# <!-- Pagination (si nécessaire) -->
            <div class="flex flex-col items-center border-t bg-white px-5 py-5 sm:flex-row sm:justify-between">
                <span class="text-xs text-gray-600 sm:text-sm"> Affichage de 1 à {{ presentations|length }} présentations </span>
                <div class="mt-2 inline-flex sm:mt-0">
                    <button class="mr-2 h-12 w-12 rounded-full border text-sm font-semibold text-gray-600 transition duration-150 hover:bg-gray-100">Précédent</button>
                    <button class="h-12 w-12 rounded-full border text-sm font-semibold text-gray-600 transition duration-150 hover:bg-gray-100">Suivant</button>
                </div>
            </div> #}
        </div>
    {% endif %}
</div>
{% endblock %}
