{% extends 'admin_base.html.twig' %}

{% block body %}
	<div class="mx-auto max-w-screen-lg px-4 py-8 sm:px-8">
		<h1 class="text-2xl font-semibold text-gray-700">Liste des Réseaux Sociaux</h1>

		<a href="{{ path('admin_socials_network_new') }}" class="inline-block mt-4 rounded bg-blue-500 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-600">
			Ajouter un nouveau réseau social
		</a>

		{% if socialsNetworks is empty %}
			<p class="mt-4 text-gray-500">Aucun réseau social trouvé.</p>
		{% else %}
			<div class="overflow-y-hidden rounded-lg border mt-6">
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="bg-blue-600 text-left text-xs font-semibold uppercase tracking-widest text-white">
								<th class="px-5 py-3">Nom</th>
								<th class="px-5 py-3">URL</th>
								<th class="px-5 py-3">Actions</th>
							</tr>
						</thead>
						<tbody class="text-gray-500">
							{% for social in socialsNetworks %}
								<tr
									class="bg-white hover:bg-gray-100">
									<td class="border-b border-gray-200 px-5 py-5 text-sm">
										<p class="whitespace-no-wrap">{{ social.name|capitalize }}</p>
									</td>

									<td class="border-b border-gray-200 px-5 py-5 text-sm">
										<p class="whitespace-no-wrap">{{ social.url }}</p>
									</td>

									<td class="border-b border-gray-200 px-5 py-5 text-sm">
										<div
											class="flex space-x-4">
											<a href="{{ path('admin_socials_network_edit', { id: social.id }) }}" class="inline-block rounded bg-green-500 px-4 py-2 text-sm font-semibold text-white hover:bg-green-600">
												Modifier
											</a>
											<a href="{{ path('admin_socials_network_delete', { id: social.id }) }}" class="inline-block rounded bg-red-500 px-4 py-2 text-sm font-semibold text-white hover:bg-red-600" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')">
												Supprimer
											</a>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
