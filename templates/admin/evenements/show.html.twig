{% extends 'admin_base.html.twig' %}

{% block title %}Détails de l'Événement
{% endblock %}

{% block body %}
	<div class="container mx-auto p-6 bg-gray-100">
		<h1 class="text-3xl font-bold mb-6">Détails de l'Événement</h1>

		<div class="bg-white shadow-md rounded-lg p-6">
			<table class="min-w-full bg-white border border-gray-200">
				<tbody>
					<tr class="border-b">
						<th class="px-4 py-2 text-left text-gray-600 font-semibold">ID</th>
						<td class="px-4 py-2">{{ evenement.id }}</td>
					</tr>
					<tr class="border-b">
						<th class="px-4 py-2 text-left text-gray-600 font-semibold">Nom</th>
						<td class="px-4 py-2">{{ evenement.nom }}</td>
					</tr>
					<tr class="border-b">
						<th class="px-4 py-2 text-left text-gray-600 font-semibold">Date</th>
						<td class="px-4 py-2">{{ evenement.date ? evenement.date|date('d/m/Y') : '' }}</td>
					</tr>
					<tr class="border-b">
						<th class="px-4 py-2 text-left text-gray-600 font-semibold">Description</th>
						<td class="px-4 py-2">{{ evenement.description }}</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="mt-6 flex space-x-4">
			<a href="{{ path('admin_evenements_index') }}" class="inline-block px-6 py-3 bg-gray-800 text-white font-semibold rounded-lg shadow-md hover:bg-gray-700">
				Retour à la liste
			</a>

			<a href="{{ path('admin_evenements_edit', {'id': evenement.id}) }}" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-500">
				Éditer
			</a>
		</div>
	</div>
{% endblock %}
