{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de l'événement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_evenements_index') }}" class="btn btn-primary">Retour à la liste</a>
    <a href="{{ path('admin_evenements_edit', {'id': evenement.id}) }}" class="btn btn-warning">Éditer</a>
{% endblock %}
