{% extends 'admin_base.html.twig' %}

{% block title %}Éditer Événement{% endblock %}

{% block body %}
    <div class="mx-auto w-10/12 max-w-2xl p-4 border border-gray-300 shadow-lg mt-8">
        <h1 class="text-center font-bold text-2xl mb-5 text-gray-800">Modifier Événement</h1>

        {% for label, messages in app.session.flashBag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
    
        <div class="mb-4">
            {{ form_label(form.annee, 'Année', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.annee, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
            {{ form_errors(form.annee) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.donations, 'Dons', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.donations, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
            {{ form_errors(form.donations) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.thumbnail, 'Image (Thumbnail)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.thumbnail, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
            {{ form_errors(form.thumbnail) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.participants, 'Participants', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.participants, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none select2'}}) }}
            {{ form_errors(form.participants) }}
        </div>

        <div class="flex justify-end mt-6">
            <a href="{{ path('admin_evenements_index') }}" class="border border-gray-300 p-2 px-4 font-semibold text-gray-500 mr-2">Retour à la liste</a>
            <button type="submit" class="bg-indigo-500 text-white p-2 px-4 font-semibold border border-indigo-500">Mettre à jour</button>
        </div>

        {{ form_end(form) }}

        {{ include('admin/evenements/_delete_form.html.twig') }}
    </div>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: 'Sélectionnez des participants',
                allowClear: true
            });
        });
    </script>
{% endblock %}
