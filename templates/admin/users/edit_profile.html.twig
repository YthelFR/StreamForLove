{% extends 'admin_base.html.twig' %}

{% block body %}
    <h1>Modifier votre profil</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email, {'label': 'Adresse Email'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.pseudo, {'label': 'Pseudo'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.old_password, {'label': 'Mot de passe actuel'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.new_password.first, {'label': 'Nouveau mot de passe'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.new_password.second, {'label': 'Répéter le mot de passe'}) }}
        </div>
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
    {{ form_end(form) }}
{% endblock %}
