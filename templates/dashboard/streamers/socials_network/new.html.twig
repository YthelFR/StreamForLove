{% extends 'user_base.html.twig' %}

{% block title %}Ajouter un Réseau Social
{% endblock %}

{% block body %}
	<div class="ml-auto mb-6 lg:w-[75%] xl:w-[80%] 2xl:w-[85%]">
		<div class="container mx-auto px-4 py-8">
			<h1 class="text-center text-2xl font-bold mb-4 text-gray-800">Ajouter un Réseau Social</h1>

			 {% for label, messages in app.flashes %}
            <div class="mb-4">
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4" role="alert">
                    <p class="font-bold">{{ label == 'success' ? 'Succès' : 'Erreur' }}</p>
                    <p>{{ messages|join(', ') }}</p>
                </div>
            </div>
        {% endfor %}

			<div class="mx-auto w-11/12 max-w-3xl border border-gray-300 p-5 shadow-lg rounded-lg bg-white">
				{{ form_start(form) }}

				<div class="mb-4">
					{{ form_row(form.name, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.url, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
				</div>

				<div class="flex justify-end mt-4">
					<button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Créer</button>
					<a href="{{ path('streamer_socials_network_index') }}" class="bg-gray-500 text-white px-4 py-2 rounded ml-4">Annuler</a>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
