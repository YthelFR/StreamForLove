{% block body %}
    <h2>Météo Locale</h2>

    <form method="GET" action="{{ path('app_dashboard') }}">
        <input type="text" name="city" placeholder="Entrez votre ville" required>
        <button type="submit">Rechercher</button>
    </form>

    {% if weather %}
        <h3>{{ weather.name }}, {{ weather.sys.country }}</h3>
        <div class="flex items-center">
            <div id="icon">
                <img src="http://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png" alt="{{ weather.weather[0].description }}" />
            </div>
            <div id="temp">
                <h4 class="text-4xl">{{ weather.main.temp }}°C</h4>
                <p class="text-xs text-gray-500">Feels like {{ weather.main.feels_like }}°C</p>
            </div>
        </div>
    {% else %}
        <p>Aucune donnée disponible.</p>
    {% endif %}
{% endblock %}
