<form action="{{ clip.id is defined ? path('app_clips_edit', { id: clip.id }) : path('app_clips_new') }}" method="post">
    {% if clip.id is defined %}
        <input type="hidden" name="_method" value="PUT">
    {% endif %}
    
    <div class="mb-4">
        <label for="clip_title" class="block text-gray-700 font-bold mb-2">Titre</label>
        <input type="text" id="clip_title" name="clip[title]" value="{{ clip.title }}" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Titre du clip">
    </div>
    
    <div class="mb-4">
        <label for="clip_url" class="block text-gray-700 font-bold mb-2">URL du Clip</label>
        <input type="url" id="clip_url" name="clip[url]" value="{{ clip.url }}" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="https://www.twitch.tv/.../clip/...">
    </div>

    <div class="mb-4">
        <label for="clip_description" class="block text-gray-700 font-bold mb-2">Description</label>
        <textarea id="clip_description" name="clip[description]" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Description du clip">{{ clip.description }}</textarea>
    </div>

    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        {{ clip.id is defined ? 'Modifier' : 'Cr√©er' }} le Clip
    </button>
</form>
