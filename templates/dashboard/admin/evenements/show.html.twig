{% extends 'admin_base.html.twig' %}

{% block title %}Détails de l'Événement{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 bg-gray-100">
        <h1 class="text-3xl font-bold mb-6">Détails de l'Événement</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Année : {{ evenement.annee ? evenement.annee|date('Y') : '' }}</h2>
            <p class="mb-2"><strong>Dons :</strong> {{ evenement.donations }}</p>
            <p class="mb-4"><strong>Description :</strong> {{ evenement.description }}</p>
            <p class="mb-4"><strong>Participants :</strong> 
                {% if evenement.participants is not empty %}
                    {% for participant in evenement.participants %}
                        <span class="inline-block bg-blue-100 text-blue-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">{{ participant.pseudo }}</span>
                    {% endfor %}
                {% else %}
                    Aucun participant trouvé.
                {% endif %}
            </p>

            <div class="flex justify-between mt-4">
                <a href="{{ path('admin_evenements_edit', {'id': evenement.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Modifier</a>
                {{ include('dashboard/admin/evenements/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
