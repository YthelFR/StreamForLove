{% extends 'admin_base.html.twig' %}

{% block title %}Éditer l'utilisateur
{% endblock %}

{% block body %}
	<div class="mx-auto w-10/12 max-w-2xl p-4 border border-gray-300 shadow-lg mt-8">
		<h1 class="text-center font-bold text-2xl mb-5 text-gray-800">Éditer l'utilisateur</h1>

		 {% for label, messages in app.flashes %}
            <div class="mb-4">
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4" role="alert">
                    <p class="font-bold">{{ label == 'success' ? 'Succès' : 'Erreur' }}</p>
                    <p>{{ messages|join(', ') }}</p>
                </div>
            </div>
        {% endfor %}

		{{ form_start(form) }}

		<div class="mb-4">
			{{ form_label(form.email, 'Adresse Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
		</div>

		<div class="mb-4">
			{{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(form.pseudo, {'attr': {'class': 'block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
		</div>

		<div class="mb-4">
			{{ form_label(form.pronoms, null, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
			{{ form_widget(form.pronoms, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
			{{ form_errors(form.pronoms) }}
		</div>

		<div class="mb-4">
			{{ form_label(form.roles, 'Rôle', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(form.roles, {'attr': {'class': 'select2 block w-full mt-1 p-2 bg-gray-100 border border-gray-300 outline-none'}}) }}
		</div>

		{{ form_row(form.send_password_reset_email) }}

		<div class="flex justify-end mt-6">
			<a href="{{ path('admin_users_index') }}" class="border border-gray-300 p-2 px-4 font-semibold text-gray-500 mr-2">Retour à la liste</a>
			<button type="submit" class="bg-indigo-500 text-white p-2 px-4 font-semibold border border-indigo-500">Sauvegarder</button>
		</div>

		{{ form_end(form) }}
	</div>
	<script>
		$(document).ready(function () {
$('.select2').select2({placeholder: 'Sélectionnez un ou plusieurs rôles', allowClear: true});
});
	</script>
{% endblock %}
