{% if inspiration %}
	<div class="flex items-center space-x-4">
		<img src="{{ inspiration.avatar }}" alt="{{ inspiration.character }}" class="w-16 h-16 rounded-full object_cover shadow-md">
		<div>
			<h3 class="text-lg font-semibold text-gray-900">{{ inspiration.character|replace({'_': ' '})|title }}</h3>
			<span class="text-sm text-gray-500 italic">({{ inspiration.game|replace({'_': ' '})|title }})</span>
		</div>
	</div>
	<p class="mt-4 text-gray-700 text-center font-medium">"{{ inspiration.quote }}"</p>
{% else %}
	<p class="text-center text-gray-500">Aucune inspiration disponible pour le moment.</p>
{% endif %}
