{% extends 'user_base.html.twig' %}

{% block title %}Présentation{% endblock %}

{% block body %}
<div class="ml-auto mb-6 lg:w-[75%] xl:w-[80%] 2xl:w-[85%]">
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-semibold mb-4">Ma Présentation</h1>

    {% if presentation is not null %}
        <div class="bg-white p-4 rounded shadow-md">
            <h2 class="text-xl font-bold mb-2">Présentation</h2>
            <div class="mb-4">
                {% if presentation.picturePath %}
                    <img src="{{ asset('assets/users/presentations/pictures/' ~ presentation.picturePath) }}" alt="Présentation Image" class="w-full h-auto mb-4">
                {% endif %}
                <p><strong>Question 1:</strong> {{ presentation.question1 }}</p>
                <p><strong>Question 2:</strong> {{ presentation.question2 }}</p>
                <p><strong>Question 3:</strong> {{ presentation.question3 }}</p>
                {% if presentation.planning %}
                    <img src="{{ asset('assets/users/presentations/planning/' ~ presentation.planning) }}" alt="Planning Image" class="w-full h-auto mb-4">
                {% endif %}
                {% if presentation.clip1 %}
                    <p><strong>Clip 1:</strong> <a href="{{ presentation.clip1 }}" target="_blank">Voir le clip</a></p>
                {% endif %}
                {% if presentation.clip2 %}
                    <p><strong>Clip 2:</strong> <a href="{{ presentation.clip2 }}" target="_blank">Voir le clip</a></p>
                {% endif %}
                {% if presentation.clip3 %}
                    <p><strong>Clip 3:</strong> <a href="{{ presentation.clip3 }}" target="_blank">Voir le clip</a></p>
                {% endif %}
                {% if presentation.clip4 %}
                    <p><strong>Clip 4:</strong> <a href="{{ presentation.clip4 }}" target="_blank">Voir le clip</a></p>
                {% endif %}
            </div>
            <a href="{{ path('streamer_presentations_edit', { id: presentation.id }) }}" class="text-blue-500 hover:underline">Éditer la présentation</a>
        </div>
    {% else %}
        <div class="bg-white p-4 rounded shadow-md">
            <p>Aucune présentation trouvée. Vous pouvez en créer une nouvelle.</p>
            <a href="{{ path('streamer_presentations_new') }}" class="text-blue-500 hover:underline">Créer une présentation</a>
        </div>
    {% endif %}
</div>
</div>
{% endblock %}
