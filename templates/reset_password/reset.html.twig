{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-blue-100 to-blue-300">
        <div class="bg-white shadow-lg px-8 py-10 rounded-3xl w-full max-w-sm sm:max-w-md lg:max-w-lg">
            <div class="font-semibold text-xl sm:text-2xl text-center text-gray-800 mb-8">
                Réinitialiser votre mot de passe
            </div>

            {{ form_start(resetForm, {'attr': {'class': 'space-y-8'}}) }}
                <!-- Password field -->
                <div class="flex flex-col">
                    {{ form_row(resetForm.plainPassword, {
                        'label_attr': {'class': 'text-sm font-semibold text-gray-700 mb-2'},
                        'attr': {
                            'class': 'text-base placeholder-gray-400 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-full py-2 px-4 transition duration-150 ease-in-out',
                            'placeholder': 'Entrez votre nouveau mot de passe'
                        }
                    }) }}
                </div>

                <!-- Submit button -->
                <div class="flex w-full">
                    <button type="submit" class="mt-4 flex items-center justify-center text-white text-base font-semibold bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 rounded-lg py-2 w-full transition duration-150 ease-in-out shadow-lg">
                        <span class="mr-2">Réinitialiser le mot de passe</span>
                        <svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                            <path d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </button>
                </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
