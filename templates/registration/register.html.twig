{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<style>
		#newsletterSection {
			display: none;
		}
		.terms-container {
			display: flex;
			align-items: center;
			margin-top: 1rem;
			font-size: 0.875rem; /* Taille de police légèrement plus grande */
		}
		.terms-checkbox {
			margin-right: 0.5rem; /* Espace entre la case et le texte */
		}
		.terms-link {
			color: #3b82f6; /* Couleur bleu pour les liens */
			text-decoration: underline;
			cursor: pointer;
		}
		.terms-link:hover {
			text-decoration: none; /* Retire le soulignement au survol */
		}
	</style>

	<div class="min-h-screen flex flex-col items-center justify-center gradientBg">
		<div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-3xl w-full max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl xl:max-w-2xl">
			<div class="font-medium self-center text-lg sm:text-xl md:text-2xl lg:text-3xl text-gray-800">
				Inscription
			</div>

			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger bg-red-100 text-red-700 border border-red-400 rounded-md p-4 mb-4">
					{{ flash_error }}
				</div>
			{% endfor %}

			<div class="mt-4 self-center text-sm sm:text-md md:text-lg text-gray-800">
				Entrez vos informations pour vous inscrire
			</div>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			<!-- Email Input -->
			<div class="flex flex-col mb-5">
				{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'mb-1 text-xs tracking-wide text-gray-600'}}) }}
				<div class="relative">
					<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
						<i class="fas fa-at text-blue-500"></i>
					</div>
					{{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400',
                                'placeholder': 'Votre e-mail'
                            }
                        }) }}
				</div>
			</div>

			<!-- Pseudo Input -->
			<div class="flex flex-col mb-5">
				{{ form_label(registrationForm.pseudo, 'Pseudo', {'label_attr': {'class': 'mb-1 text-xs tracking-wide text-gray-600'}}) }}
				<div class="relative">
					<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
						<i class="fas fa-user text-blue-500"></i>
					</div>
					{{ form_widget(registrationForm.pseudo, {
                            'attr': {
                                'class': 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400',
                                'placeholder': 'Votre pseudo'
                            }
                        }) }}
				</div>
			</div>

			<!-- Password Input -->
			<div class="flex flex-col mb-6">
				{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'mb-1 text-xs tracking-wide text-gray-600'}}) }}
				<div class="relative">
					<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
						<span>
							<i class="fas fa-lock text-blue-500"></i>
						</span>
					</div>
					{{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400',
                                'placeholder': 'Votre mot de passe'
                            }
                        }) }}
				</div>
			</div>

			<!-- Agree Terms Section -->
			<div class="flex items-center mb-5">
			{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'text-blue-500 border-gray-300 rounded focus:ring focus:ring-blue-200'}}) }}
			<span class="ml-2 text-gray-600 text-sm">
				J'accepte les
				<a href="{{ path('app_legal') }}" class="text-[#9F2627] hover:underline">mentions légales</a>
				et
				<a href="{{ path('app_confidentialite') }}" class="text-[#9F2627] hover:underline">la politique de confidentialité</a>.
			</span>
		</div>

		<div class="flex w-full">
			<button type="submit" class="flex mt-2 items-center justify-center focus:outline-none text-white text-sm sm:text-base btnSfl rounded-2xl py-2 w-full transition duration-150 ease-in bg-blue-500 hover:bg-blue-600">
				<span class="mr-2 uppercase">S'inscrire</span>
				<span>
					<svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewbox="0 0 24 24" stroke="currentColor">
						<path d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
					</svg>
				</span>
			</button>
		</div>
		{{ form_end(registrationForm) }}
	</div>
</div>{% endblock %}
