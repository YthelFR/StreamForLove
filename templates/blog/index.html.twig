{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <div class="articles">
        {% for article in pagination %}
            <div class="article">
                {% if article.imagePath %}
                    <img src="{{ asset(article.imagePath) }}" alt="{{ article.titre }}" class="article-image">
                {% endif %}
                <h2>{{ article.titre }}</h2>
                <p class="entete">{{ article.entete }}</p>
                <p class="accroche">{{ article.accroche|striptags|slice(0, 100) ~ '...' }}</p>
                <a href="{{ path('app_blog_show', { id: article.id }) }}" class="btn btn-primary">Voir plus</a>
            </div>
        {% else %}
            <p>Aucun article trouv√©.</p>
        {% endfor %}
    </div>

    {# Pagination #}
    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
