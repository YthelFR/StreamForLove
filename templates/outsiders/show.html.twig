{% extends 'base.html.twig' %}

{% block title %}
	{{ outsider.pseudo }}
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<h1 class="text-3xl font-bold mb-4">{{ outsider.pseudo }}</h1>
		<div class="flex items-center mb-4">
			<img src="{{ channelInfo['profile_image_url'] }}" alt="{{ outsider.pseudo }}" class="w-32 h-32 rounded-full mr-4">
			<div>
				<p>
					<strong>Somme:</strong>
					{{ outsider.somme }}
					€</p>
				<p>
					<strong>Twitch:</strong>
					{{ outsider.twitch }}</p>
			</div>
		</div>

		<h2 class="text-2xl font-bold mb-2">Dernier Jeu Joué</h2>
		{% if recentGames is not empty %}
			<div class="flex items-center">
				<img src="{{ recentGames['box_art_url'] }}" alt="{{ recentGames['name'] }}" class="w-32 h-32 rounded mr-4">
				<div>
					<p>
						<strong>Nom du Jeu:</strong>
						{{ recentGames['name'] }}</p>
				</div>
			</div>
		{% else %}
			<p>Aucun jeu récent trouvé.</p>
		{% endif %}
	</div>
{% endblock %}
